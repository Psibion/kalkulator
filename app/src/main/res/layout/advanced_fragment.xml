<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:gravity="right"
        android:textAlignment="gravity"
        android:id="@+id/display" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">

        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnBks"
            android:layout_weight="1"
            android:text="Bksp"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnC"
            android:layout_weight="2.4"
            android:text="C"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnPlusMinus"
            android:layout_weight="1"
            android:text="Â±"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">

        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnSin"
            android:layout_weight="1"
            android:text="sin"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnCos"
            android:layout_weight="1"
            android:text="cos"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnTan"
            android:layout_weight="1"
            android:text="tan"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnLn"
            android:layout_weight="1"
            android:text="ln"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">

        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnSqrt"
            android:layout_weight="1"
            android:text="sqrt"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnPotega"
            android:layout_weight="1"
            android:text="x^2"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnXY"
            android:layout_weight="1"
            android:text="x^y"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnLog"
            android:layout_weight="1"
            android:text="log"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">

        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn7"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn8"
            android:layout_weight="1"
            android:text="8"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn9"
            android:layout_weight="1"
            android:text="9"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnDzielenie"
            android:layout_weight="1"
            android:text="/"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">

        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:text="4"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:text="5"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn6"
            android:layout_weight="1"
            android:text="6"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnRazy"
            android:layout_weight="1"
            android:text="*"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">

        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:text="1"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:text="2"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:text="3"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnMinus"
            android:layout_weight="1"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10">

        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btn0"
            android:layout_weight="1"
            android:text="0"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnKropka"
            android:layout_weight="1"
            android:text="."/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnRowne"
            android:layout_weight="1"
            android:text="="/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="35dp"
            android:id="@+id/btnPlus"
            android:layout_weight="1"
            android:text="+"/>
    </LinearLayout>


</LinearLayout>
